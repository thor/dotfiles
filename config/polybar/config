[colors]
background = #111
background-alt = #222

foreground = #ccc
foreground-alt = #444
foreground-sec = #888

primary = #ffb52a
secondary = #e60053

# see module/i3
# -- https://sashat.me/2017/01/11/list-of-20-simple-distinct-colors/
red     = #e6194B
green   = #3cb44b
yellow  = #ffe119
blue    = #4363d8
orange  = #f58231
purple  = #911eb4
cyan    = #42d4f4
magenta = #f032e6
lime    = #bfef45
pink    = #fabebe

good = ${self.green}
alert = ${self.red}


[bar/first]
width = 100%
height = 24
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true

; What monitor do I want it on? Ugh, no good multi-monitor support.
monitor = ${env:MONITOR:eDP-1}
; Only allow monitors with the state connected
monitor-strict = true

; i3 scrolling between workspaces
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-bottom-size = 1
border-bottom-color = #ff333333

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 2


; Order of font lookups
font-0 = Noto Sans:size=10:pixelsize=10;0
font-1 = Material Design Icons:style=Regular:pixelsize=14;2
font-2 = Font Awesome 5 Free:style=Solid:antialias=true:pixelsize=10;2
font-3 = Noto Color Emoji:size=10:scale=10:pixelsize=13;2
font-4 = Noto Sans CJK KR:size=10:pixelsize=10;0

modules-left = i3 xwindow
modules-center = date
modules-right = updates fs-root fs-home memory cpu wlan eth net-speed openvpn battery temperature volume

; Set not-likely-to-change settings
;
; Set locale
locale = nb_NO.UTF-8

tray-position = right
tray-padding = 2
tray-background = ${colors.background-alt}

; Module settings
eth-interface = enp0s25
wifi-interface = wlp3s0


[bar/lincoln-whiskey]
inherit = bar/first

; Device specific settings
monitor-fallback = eDP-1
battery = CMB1


[bar/lincoln-delta]
inherit = bar/first

; Device specific settings
monitor-fallback = DP-2
battery = BAT0
; Docking port
eth-interface = enp0s20f0u6u2
wifi-interface = wlp2s0


[bar/lincoln-echo]
inherit = bar/first

; Device specific settings
monitor-fallback = DP-2
battery = BAT0
; Docking port
eth-interface = enp0s31f6
wifi-interface = wlp61s0


[bar/delta-left]
inherit = bar/first
monitor = DP-4
modules-right = updates temperature memory cpu 
tray-position = none


[bar/delta-right]
inherit = bar/first
monitor = DVI-D-0
modules-right = updates temperature memory cpu 
tray-position = none


[bar/delta-center]
inherit = bar/first
monitor = DP-2

; Device specific settings
eth-interface = eno1
modules-right = fs-root fs-home wlan eth net-speed openvpn battery volume

[bar/lincoln-charlie]
inherit = bar/first

modules-right = fs-root volume memory cpu wlan eth battery battery-extra temperature date powermenu

; Device specific settings
monitor-fallback = LVDS-1
battery = BAT0
battery-extra = BAT1


[module/xwindow]
type = internal/xwindow

label = %title%
label-maxlen = 50
label-padding = 2

[module/fs-root]
type = internal/fs

interval = 30
mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-} %percentage_used%%
label-mounted-foreground = ${colors.foreground-sec}
label-mounted-underline = #88aaee
label-unmounted = %mountpoint% not mounted

[module/fs-home]
type = internal/fs

interval = 30
mount-0 = /home

label-mounted = %{F#0a81f5}~%{F-} %percentage_used%%
label-mounted-foreground = ${colors.foreground-sec}
label-mounted-underline = #88aaee
label-unmounted = %mountpoint% not mounted


[module/i3]
type = internal/i3
index-sort = true
strip-wsnumbers = true

; Whether to only show workspaces for said monitor or not
pin-workspaces = true

ws-icon-0  = 1;%{F#e6194B} %{T3}ÔÑ† %{T-}%{F-} cli
ws-icon-1  = 2;%{F#3cb44b} %{T3}ÔÇ¨ %{T-}%{F-} web
ws-icon-2  = 3;%{F#ffe119} %{T3}ÔÇÜ %{T-}%{F-} irc
ws-icon-3  = 4;%{F#4363d8} %{T3}ÔÖú %{T-}%{F-} doc
ws-icon-4  = 5;%{F#f58231} %{T3}ÔÄà %{T-}%{F-} med
ws-icon-5  = 6;%{F#911eb4} %{T3}ÔÅº %{T-}%{F-} ls
ws-icon-6  = 7;%{F#42d4f4} %{T3}ÔÉÄ %{T-}%{F-} grp
ws-icon-7  = 8;%{F#f032e6} %{T3}ÔÑ° %{T-}%{F-} code
ws-icon-8  = 9;%{F#bfef45} %{T3}ÔÄú %{T-}%{F-} work
ws-icon-9  = 10;%{F#fabebe} %{T3}ÔÑ® %{T-}%{F-} huh
ws-icon-10 = 11;%{F#469990} %{T3}ÔÅß %{T-}%{F-} extra

format = <label-state> <label-mode>

; shared = referenced with ${self.whatever}
padding = 2
label = %icon% %{F#666}%name%%{F-}

; mode = shortcuts and things like that
label-mode = %mode%
label-mode-padding = ${self.padding}
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = ${self.label}
label-focused-background = ${colors.background-alt}
label-focused-padding = ${self.label-mode-padding}
label-focused-underline = ${colors.primary}
label-focused-underline-size = 4

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label}
label-unfocused-padding = ${self.label-mode-padding}
label-unfocused-overline = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label}
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = Û∞ª†
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:3%%
label-padding = 1


[module/memory]
type = internal/memory
interval = 2
format-prefix = Û∞çõ
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used:3%%
label-padding = 1


[module/wlan]
type = internal/network
interface = ${root.wifi-interface}
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%
label-connected-foreground = ${colors.foreground-sec}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}
format-packetloss = <animation-packetloss> <label-connected>
animation-packetloss-0 = ‚ö†
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = üì∂
animation-packetloss-1-foreground = #000000
; Framerate in milliseconds
animation-packetloss-framerate = 500

ramp-signal-0 = Ô§Æ
ramp-signal-1 = Ô§û
ramp-signal-2 = Ô§°
ramp-signal-3 = Ô§§
ramp-signal-4 = Ô§ß

[module/eth]
type = internal/network
interface = ${root.eth-interface}
interval = 3.0

format-connected-underline = ${colors.blue}
format-connected-prefix = "Û∞àÄ "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/net-speed-wifi]
type = internal/network
interface = ${root.wifi-interface}

[module/net-speed-eth]
type = internal/network
interface = ${root.eth-interface}

[module/net-speed]
type = internal/network
interface = ${root.eth-interface}
interval = 5.0

label-connected = Û∞õ¥%downspeed:10:10%  Û∞õ∂%upspeed:10:10% 
format-connected-underline = ${colors.blue}
label-padding = 2

downspeed-min = 20
accumulate-stats = true


[module/openvpn]
type = custom/script
exec = nmcli d show tun0 | grep -i ip4.addr | cut -d: -f2 | awk '{$1=$1};1'
exec-if = pgrep -x openvpn

interval = 10

format-underline = #ff5555
format-prefix = "ÔÄ£ "
#format-prefix-foreground = ${colors.foreground}
label-foreground = ${colors.foreground-sec}


[module/date]
type = internal/date
interval = 5

date = "%d. %b"
time = %H:%M

label = %time% %date%
label-padding = 2

format-prefix = %{T3}ÔÄó%{T-} 
format-padding = 3
format-background = ${colors.background-alt}
format-prefix-foreground = ${colors.foreground-sec}


[module/volume]
type = internal/pulseaudio

; Attempt to use volume mapping with linear increase in volume perceived by ear
mapped = true

; Use PA_VOLUME_UI_MAX (~153&) if true, otherwise PA_VOLUME_NORM (100%)
use-ui-max = true

format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.green}

label-volume = %percentage:3%%
label-volume-padding = 1
label-volume-foreground-0 = #55aa55
label-volume-foreground-1 = #f5a70a
label-volume-foreground-2 = #ff5555

ramp-volume-0 = Û∞ïø
ramp-volume-1 = Û∞ñÄ
ramp-volume-2 = Û∞ïæ
ramp-volume-3 = Û∞ùù

label-muted = Û∞ùü
label-muted-foreground = ${colors.alert}

[module/battery]
type = internal/battery
battery = ${root.battery}
adapter = AC
full-at = 95

label-charging-foreground = ${colors.foreground-sec}
format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

label-discharging = %percentage%% (%time%)
label-discharging-foreground = ${colors.foreground-sec}
format-discharging = %{T2}<ramp-capacity>%{T-} <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

label-full = %percentage%%
label-full-foreground = ${colors.foreground-sec}
format-full-prefix = ÔÇÑ
format-full-underline = ${colors.good}

ramp-capacity-0 = ÔÅ∫
ramp-capacity-1 = ÔÅª
ramp-capacity-2 = ÔÅº
ramp-capacity-3 = ÔÅΩ
ramp-capacity-4 = ÔÅæ
ramp-capacity-5 = ÔÅø
ramp-capacity-6 = ÔÇÄ
ramp-capacity-7 = ÔÇÅ
ramp-capacity-8 = ÔÇÇ
ramp-capacity-9 = ÔÅπ
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = Ô¢õ
animation-charging-1 = ÔÇÜ
animation-charging-2 = ÔÇá
animation-charging-3 = ÔÇà
animation-charging-4 = Ô¢ú
animation-charging-5 = ÔÇâ
animation-charging-6 = Ô¢ù
animation-charging-7 = ÔÇä
animation-charging-8 = ÔÇã
animation-charging-9 = ÔÇÖ
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 500


[module/battery-extra]
inherit = module/battery
battery = ${root.battery-extra}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c:5%
label-foreground = ${colors.foreground-sec}
label-warn = %temperature-c:5%
label-warn-foreground = ${colors.secondary}

ramp-0 = Ôãã
ramp-1 = Ôãä
ramp-2 = Ôãâ
ramp-3 = Ôãà
ramp-4 = Ôù©
ramp-font = 3
ramp-foreground = ${colors.foreground}


[module/updates]
type = custom/script
exec = pacman -Qqu | wc -l
tail = false
interval = 60
format-prefix = Û∞ëê
format-prefix-padding = 1
format-underline = ${colors.lime}


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

